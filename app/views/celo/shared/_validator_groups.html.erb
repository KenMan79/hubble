<section class='validator-groups'>
  <div class='validator-groups-table-header justify-content-between py-1 flex-wrap'>
    <div class='d-flex align-items-center flex-grow-1 py-2'>
      <h4>Validator groups</h4>
      <input type='text' class='form-control form-control-sm validator-groups-search' placeholder='filter validator groups...'>
    </div>
  </div>
  <div class='validator-groups-table'>
    <table>
      <thead>
      <tr>
        <th>Address/Name</th>
        <th>Votes</th>
        <th>Commission</th>
        <th>State</th>
        <th class='d-none'></th>
      </tr>
      </thead>
      <tbody>
      <% validator_groups.each do |validator_group| -%>
        <tr>
          <td class='col-address' data-order='<%= validator_group.address %>'>
            <%= link_to namespaced_path('validator_group', validator_group.address) do %>
              <strong><%= validator_group.display_name.truncate(38) %></strong>
            <% end -%>
          </td>
          <td data-order='<%= validator_group.votes %>'>
            <%= format_amount(validator_group.votes, @chain, denom: @chain.class::DEFAULT_TOKEN_REMOTE) %>
          </td>
          <td class="text-right technical" data-order='<%= rounded_percentage(validator_group.factored_commission) %>'>
            <%= rounded_percentage(validator_group.factored_commission) %> %
          </td>
          <td class="technical" data-order='<%= validator_group.online? %>'>
            <% if validator_group.online? -%>
              <span class='badge badge-lg badge-success'>UP</span>
            <% else -%>
              <span class='badge badge-lg badge-danger'>DOWN</span>
            <% end -%>
          </td>
          <td class='d-none'>
            <%= validator_group.address %>
            <%= validator_group.display_name %>
            <%= validator_group.online? %>
          </td>
        </tr>
      <% end -%>
      </tbody>
    </table>
  </div>
</section>
