<header class='network-chain-header'>
  <h1>
    Cosmos
    <% if @chain -%>
      <small class='chain-info text-muted'>
        <span class='d-none d-md-inline'>&mdash;</span>
        <%= @chain.name %>
        <% if @chain.testnet? %>
          <span class='d-none d-md-inline badge badge-pill badge-light'>TESTNET</span>
          <span class='d-inline d-md-none text-muted'><span class='fa fa-vial'></span></span>
        <% end %>
      </small>
    <% end -%>
  </h1>

  <div class='buttons ml-auto'>
    <% if @chain -%>
      <button class='ml-1 tooltip-target info-tooltip-target' data-toggle='tooltip' title='<%= chain_header_tooltip_info %>'>
        <span class='fa fa-info'></span>
      </button>

      <% if defined?(faucet_link) && @chain.faucet -%>
        <a class='ml-1 btn btn-outline-primary' href='<%= cosmos_chain_faucet_path(@chain) %>'>Faucet</a>
      <% end -%>
      <% if defined? summary_link -%>
        <a class='ml-1 btn btn-outline-secondary' href='<%= cosmos_chain_path( @chain ) %>'>
          <span class='d-none d-md-inline'>Summary</span>
          <span class='d-inline d-md-none fa fa-arrow-circle-up'></span>
        </a>
      <% end -%>
    <% end -%>

    <% if defined? switch_chain_link -%>
      <a class='ml-1 btn btn-outline-secondary' href='<%= cosmos_chains_path %>' title='Switch Chain'><i class='fas fa-exchange-alt'></i></a>
    <% end -%>
  </div>
</header>
