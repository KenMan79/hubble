<div class='data-table account-delegations'>
  <div class='data-table__header'>
    <h3 class='data-table__title'>Delegations</h3>
  </div>
  <table class="table delegations  m-0">
    <thead>
    <tr role="row">
      <th>Validator</th>
      <th>Amount</th>
      <th>Share</th>
    </tr>
    </thead>
    <tbody>
    <% if delegations.any? %>
      <% delegations_total = delegations.sum(&:balance) %>
      <% delegations.each do |delegation| %>
        <tr>
          <td><%= link_to delegation.delegate.truncate(20), mina_chain_validator_path(chain, delegation.delegate) %></td>
          <td><%= format_amount(delegation.balance) %></td>
          <td><%= mina_delegation_share(delegation.balance, delegations_total) %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan='3' class='data-table__empty'>
          Account does not have any delegations
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
