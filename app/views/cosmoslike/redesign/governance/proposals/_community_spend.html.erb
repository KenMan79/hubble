<div class='title mb-1'>COMMUNITY SPEND</div>
  <div class='proposal-param-changes'>
    <% @proposal.additional_data['amount'].each do |amount| -%>
      <div>
        <%= format_amount(amount['amount'].to_i, @chain, denom: amount['denom']) %>
        <span class='fas fa-long-arrow-alt-right mx-2 text-muted'></span>
        <%= link_to namespaced_path('account', @proposal.additional_data['recipient']), class: 'text-monospace' do %>
          <%= @proposal.additional_data['recipient'] %>
        <% end -%>
      </div>
    <% end -%>
  </div>
