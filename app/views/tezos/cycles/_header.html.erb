<div class="row">
  <div class="col">
    <% if @cycle.number > 0 -%>
      <%= link_to tezos_cycle_path(@cycle.number - 1), class: "btn btn-light" do %>
        <span class="fas fa-fw fa-chevron-left"></span>
      <% end %>
    <% end -%>
  </div>
  <div class="col text-center">
    <h3 class="">
      Cycle <%= @cycle.number %>
    </h3>
  </div>
  <div class="col text-right">
    <% if !@cycle.current? -%>
      <%= link_to tezos_cycle_path(@cycle.number + 1), class: "btn btn-light" do %>
        <span class="fas fa-fw fa-chevron-right"></span>
      <% end %>
    <% end -%>
  </div>
</div>
