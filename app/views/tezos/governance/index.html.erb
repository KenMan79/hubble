<% content_for :body_class, 'governance-index' %>
<%= render partial: '/tezos/shared/network_header', locals: { active_tab: 'Governance', summary_link: true, governance_link: true } %>

<div class='container'>
  <div class='content'>
    <div class='governance-proposals-list'>
      <div class='row'>
        <div class='col-12 col-md-9'>
          <section class='data-table m-0'>
            <div class='data-table__header d-flex align-items-center justify-content-between'>
              <h4 class="data-table__title">Governance Proposals</h4>
              <% if false -%>
                <div class='controls'>
                  <button class='btn btn-sm btn-outline-light' data-toggle='modal' data-target='#proposal-modal'>New Proposal</button>
                </div>
              <% end -%>
            </div>

            <%= render 'tezos/governance/proposals_table', proposals: @proposals %>
          </section>
        </div>

        <div class='col-12 col-md-3'>
          <div class='data-block mb-5'>
            <h3 class='data-block__title'>Current Period</h3>
            <div class='d-flex flex-wrap'>
              <div class='mb-3 mr-5'>
                <label class='text-label m-0'>Period Number</label>
                <div class='text-monospace'>
                  <%= @current_period.id %>
                </div>
              </div>
              <div class='mb-3 mr-5'>
                <label class='text-label m-0'>Period Type</label>
                <div class='text-monospace'>
                  <%= @current_period.period_type.sub('_', ' ').capitalize %>
                </div>
              </div>
              <div class='mb-3 mr-5'>
                <label class='text-label m-0'>Approx. Period End</label>
                <div class='text-monospace'>
                  <%= DateTime.parse(@current_period.end_time_approximation).strftime("%Y-%m-%d<br/>at %H:%M %Z").html_safe %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
