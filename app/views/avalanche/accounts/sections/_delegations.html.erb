<section class='data-table validators'>
  <div class='data-table__header'>
    <h3 class="data-table__title">
      Active Delegations
    </h3>
  </div>
  <div class='validator-table'>
    <table class="w-100">
      <thead>
        <tr role="row">
          <th>Node ID</th>
          <th>Stake Amount</th>
          <th>Potential Reward</th>
          <th>Ends On</th>
        </tr>
      </thead>
      <tbody>
      <% delegations.each do |delegation| %>
        <tr>
          <td class='technical'>
            <%= link_to delegation.node_id, avalanche_chain_validator_path(@chain, delegation.node_id) %>
          </td>
          <td class='technical'><small><%= format_amount(delegation.stake_amount, denom: @chain.class::DEFAULT_TOKEN_REMOTE) %></small></td></td>
          <td class='technical'><small><%= format_amount(delegation.potential_reward, denom: @chain.class::DEFAULT_TOKEN_REMOTE) %></small></td></td>
          <td class='technical'><small><%= delegation.active_end_time.try(:strftime, "%B %d, %Y at %H:%M %Z")  %></small></td></td>
        </tr>
      <% end -%>

      <% if @pagination_delegations.pages > 1 %>
        <tr>
          <td colspan="3">
            <%= raw(pagy_bootstrap_nav(@pagination_delegations)) %>
          </td>
        </tr>
      <% end -%>
      </tbody>
    </table>
  </div>
</section>
