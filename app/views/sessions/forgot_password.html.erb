<h2 class='page-title text-center d-block'>Reset password</h2>
<div class='row clearfix pt-3'>
  <div class='col-12 col-md-4 offset-md-4'>
    <%= form_with url: reset_password_path, method: 'post', local: true do %>
      <% if flash[:error] -%>
        <p class='flash-error'><%= flash[:error] %></p>
      <% end -%>

      <div class='form-group'>
        <input type='email' name='email' class='form-control form-input' placeholder='your@email.com' />
      </div>
      <div class='d-flex justify-content-center'>
        <input type='submit' value='send reset instructions' class='button-primary w-auto' />
      </div>
    <% end -%>
  </div>
</div>
