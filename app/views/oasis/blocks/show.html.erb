<% content_for :body_class, 'block-show' %>

<%= render partial: '/oasis/shared/chain_header', locals: { active_tab: '' } %>

<div class="container">
  <div class="content">  
    <div class='data-block'>
      <label class='data-block__title'>Block</label>
      <span class='data-block__value d-block word-break'><%= @block.last_block_id_hash %></span>
    </div>

    <% if @error %>
      <%= render partial: 'shared/display_error' %>
    <% else %>
      <%= render partial: 'shared/block_sidebar', locals: {block: @block} %>
      <%= render partial: 'transactions', locals: {transactions: @transactions} %>
      <%= render partial: 'validators', locals: {validators: @validators} %>
    <% end %>
  </div>
</div>
