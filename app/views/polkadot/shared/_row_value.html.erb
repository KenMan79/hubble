<% if row[:type] == :amount %>
  <td class="text-sm <%= row[:class] %>"><%= format_amount(row[:value].to_i, @chain, denom: @chain.class::DEFAULT_TOKEN_REMOTE) %></td>
<% elsif row[:type] == :account %>
  <td class="text-sm <%= row[:class] %>"><%= link_to row[:value], namespaced_path('account', row[:value]) %></td>
<% else %>
  <td class="text-sm <%= row[:class] %>"><%= row[:value] %></td>
<% end %>
