<div>
  <span class='d-inline d-md-none <%= icon_classes %> mr-1'></span>
  <span class='font-weight-bold'>
    <% if @validator.nil? %>
      <a href='<%= namespaced_path( 'validator', event.validatorlike ) %>'><%= event.validatorlike.short_name %></a> <%= event.added? ? 'added to' : 'removed from' %>
    <% else -%>
      <%= event.added? ? 'Added to' : 'Removed from' %>
    <% end -%>
    active set
  </span>
  <span class='text-muted'>
    at block
    <a class='technical' href='<%= namespaced_path( 'block', event.height ) %>'><%= event.height %></a>
  </span>
</div>
